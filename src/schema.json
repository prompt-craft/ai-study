{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "minItems": 4,
    "maxItems": 5,
    "items": {
        "type": "object",
        "properties": {
            "hat": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "color": {
                "type": "number",
                "pattern": "^#\\w{6}$"
            }
        },
        "required": [
            "hat",
            "description",
            "color"
        ]
    }
}